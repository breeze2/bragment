{
  "name": "bragment",
  "version": "0.0.0",
  "private": true,
  "description": "An Electron app for marking down the fragments of your thought.",
  "author": {
    "email": "805511939@qq.com",
    "name": "breezelin",
    "url": "https://github.com/breeze2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/breeze2/bragment.git"
  },
  "main": "public/electron.js",
  "scripts": {
    "prebuild:renderer": "yarn build:main",
    "prestart:electron": "yarn build:main",
    "postinstall": "husky install",
    "commit": "git-cz",
    "commit:amend": "git commit --amend --no-edit",
    "lint": "eslint main/**/*.ts src/**/*.ts src/**/*.tsx",
    "lint:fix": "yarn lint --fix",
    "analyze": "source-map-explorer 'build/**/*.js'",
    "build": "craco build",
    "build:main": "webpack --config ./main/webpack.config.js",
    "build:renderer": "cross-env BROWSER=none craco build",
    "start": "craco start",
    "start:main": "yarn build:main --watch",
    "start:renderer": "cross-env BROWSER=none craco start",
    "start:electron": "concurrently \"yarn start:renderer\" \"wait-on http://127.0.0.1:3000 && electron .\"",
    "test": "craco test"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@craco/craco": "^6.1.2",
    "@reduxjs/toolkit": "^1.6.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^13.1.9",
    "@types/color": "^3.0.1",
    "@types/jest": "^26.0.23",
    "@types/node": "^12.20.15",
    "@types/react": "^17.0.11",
    "@types/react-beautiful-dnd": "^13.0.0",
    "@types/react-custom-scrollbars": "^4.0.7",
    "@types/react-dom": "^17.0.8",
    "@types/react-redux": "^7.1.16",
    "@types/react-router-dom": "^5.1.7",
    "@types/react-transition-group": "^4.4.1",
    "@types/shortid": "^0.0.29",
    "@types/unsplash-js": "^7.0.0",
    "@types/uuid": "^8.3.0",
    "@yickfung/coditor-core": "0.1.0",
    "antd": "^4.16.3",
    "classnames": "^2.3.1",
    "color": "^3.1.3",
    "commitizen": "^4.2.4",
    "concurrently": "^6.2.0",
    "craco-antd": "^1.19.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "^10.0.0",
    "electron": "^13.1.2",
    "electron-builder": "^22.11.7",
    "electron-devtools-installer": "^3.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "file-icons-js": "^1.1.0",
    "firebase": "^8.6.8",
    "husky": "^6.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "react": "^17.0.2",
    "react-beautiful-dnd": "^13.1.0",
    "react-custom-scrollbars": "^4.2.1",
    "react-dom": "^17.0.2",
    "react-intl": "^5.20.3",
    "react-markdown": "^6.0.2",
    "react-progressive-image": "^0.6.0",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "react-transition-group": "^4.4.2",
    "redux": "^4.1.0",
