{
  "name": "bragment",
  "version": "0.0.0",
  "private": true,
  "description": "An Electron app for marking down the fragments of your thought.",
  "author": {
    "email": "805511939@qq.com",
    "name": "breezelin",
    "url": "https://github.com/breeze2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/breeze2/bragment.git"
  },
  "main": "public/electron.js",
  "dependencies": {},
  "scripts": {
    "prebuild": "yarn build:main",
    "preelectron:dev": "yarn build:main",
    "commit": "git-cz",
    "commit:amend": "git commit --amend --no-edit",
    "format": "pretty-quick --staged",
    "lint": "eslint src/**/*.ts src/**/*.tsx",
    "electron:dev": "cross-env BROWSER=none concurrently \"yarn start\" \"wait-on http://127.0.0.1:3000 && electron .\"",
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "build:main": "yarn webpack --config ./main/webpack.config.js",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn check --integrity && yarn format && yarn lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.3",
    "@testing-library/user-event": "^10.1.0",
    "@types/jest": "^25.2.1",
    "@types/node": "^12.12.35",
    "@types/react": "^16.9.34",
    "@types/react-beautiful-dnd": "^12.1.2",
    "@types/react-custom-scrollbars": "^4.0.6",
    "@types/react-dom": "^16.9.6",
    "@types/react-redux": "^7.1.6",
    "@types/react-router-dom": "^5.1.4",
    "@types/shortid": "^0.0.29",
    "@types/unsplash-js": "^6.0.1",
    "@types/uuid": "^7.0.3",
    "antd": "^4.1.4",
    "babel-plugin-import": "^1.13.0",
    "commitizen": "^4.0.4",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "customize-cra": "^0.9.1",
    "cz-conventional-changelog": "3.1.0",
    "dotenv": "^8.2.0",
    "electron": "^8.2.3",
    "electron-builder": "^22.5.1",
    "electron-devtools-installer": "^3.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "firebase": "^7.14.2",
    "husky": "^4.2.5",
    "immutable": "^4.0.0-rc.12",
    "monaco-editor": "^0.20.0",
    "monaco-editor-webpack-plugin": "^1.9.0",
    "node-sass": "^4.14.0",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "react": "^16.13.1",
    "react-app-rewired": "^2.1.5",
    "react-beautiful-dnd": "^13.0.0",
    "react-custom-scrollbars": "^4.2.1",
    "react-dom": "^16.13.1",
    "react-intl": "^4.5.0",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1",
    "redux": "^4.0.4",
    "redux-saga": "^1.1.3",
    "ts-loader": "^7.0.1",
    "typescript": "^3.8.2",
    "typescript-plugin-css-modules": "^2.2.0",
    "unsplash-js": "^6.0.0",
    "uuid": "^7.0.3",
    "wait-on": "^4.0.2",
    "webpack-cli": "^3.3.11"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
